{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "group:recommended", "config:recommended"],
    "packageRules": [
    {
      "matchUpdateTypes": ["minor", "major"],
      "automerge": true,
      "groupName": "dependency (minor, major)"
    }
    ],
    "patch": {
        "enabled": false
    },
    "git-submodules": {
        "enabled": true
    }
}
